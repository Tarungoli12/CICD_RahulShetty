<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test">
    <test name="IncludeAndExclude">                                <!--Multiple test/module are execute in one test suite-->
        <classes>                                     <!--Multiple classes are execute in one test/module-->
            <class name="com.automation.CarLoan">
                <methods>
                    <include name="testCase1"/>  <!-- include only one test case/method, where
                                                  tets case name is 'testCas1'-->
                </methods>
            </class>
            <class name="com.automation.HomeLoan">
                <methods>
                    <exclude name="testCase3"/>  <!-- excluding only one test case/method, where
                                                  tets case name is 'testCas3'-->
                </methods>
            </class>
            <class name="com.automation.CarLoan">
                <methods>
                    <exclude name="test.*"/>   <!-- excluding test cases/methods
                                                    start with 'test' using regular expression-->
                </methods>
            </class>
        </classes>
    </test>
    <test name="package">
        <packages>
            <package name="com.automation"/>     <!-- You can execute all testcases in the package-->
        </packages>
    </test>
</suite>